{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "brain.js": [
                "node_modules/brain.js/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "src/types/globals.d.ts"
    ]
}